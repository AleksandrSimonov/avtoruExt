{
  "name": "Download Images",
  "description" : "Displays all webpage images and allows user to download",
  "version": "1.0",
  "manifest_version": 2,
  "page_action": {
    "default_popup": "mainPage.html",
    "default_icon": {
      "16": "/ico/icon16.png",
      "32": "/ico/icon32.png",
      "48": "/ico/icon48.png",
      "128": "/ico/icon128.png"
    }
  },
  "icons": {
    "16": "/ico/icon16.png",
    "32": "/ico/icon32.png",
    "48": "/ico/icon48.png",
    "128": "/ico/icon128.png"
  },
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
 
}
